generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int  @id @default(autoincrement())
  firstName String
  lastName String
  favouriteColur Colour
  connectedBy User[] @relation("follows", references: [id])
  connections User[] @relation("follows", references: [id])
}

enum Colour {
  RED
  GREEN
  BLUE
}